<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
   <display-name>Email</display-name>
 
   <servlet>
   	<servlet-name>signup</servlet-name>
   	<servlet-class>com.JavaEmail.Signup</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>login</servlet-name>
   	<servlet-class>com.JavaEmail.Login</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>sendemail</servlet-name>
   	<servlet-class>com.JavaEmail.Sendemail</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>inbox</servlet-name>
   	<servlet-class>com.JavaEmail.Inbox</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>sent</servlet-name>
   	<servlet-class>com.JavaEmail.Sent</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>deluser</servlet-name>
   	<servlet-class>com.JavaEmail.DelUser</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>delinbox</servlet-name>
   	<servlet-class>com.JavaEmail.DelInbox</servlet-class>
   </servlet>
   
   <servlet-mapping>
   	<servlet-name>signup</servlet-name>
   	<url-pattern>/signup</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>login</servlet-name>
   	<url-pattern>/login</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>sendemail</servlet-name>
   	<url-pattern>/sendemail</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>inbox</servlet-name>
   	<url-pattern>/inbox</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>sent</servlet-name>
   	<url-pattern>/sent</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>deluser</servlet-name>
   	<url-pattern>/deluser</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>delinbox</servlet-name>
   	<url-pattern>/delinbox</url-pattern>
   </servlet-mapping>

 </web-app>
